@model InstituteOfFineArts.Models.Competition

@{
    ViewData["Title"] = "Create";
    ViewData["Competition"] = "active";
}
<div>
    <a class="btn btn-default" asp-action="CompetitionList"><span class="ti-control-backward"></span></a>
    @if (TempData["DateError"] != null)
    {
        <p class="alert-danger">@TempData["DateError"]</p>
    }
</div>
<hr />
<div class="row">
    <form asp-action="CreateCompetition">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CompetitionName" class="control-label"></label>
                <input asp-for="CompetitionName" class="form-control" />
                <span asp-validation-for="CompetitionName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label class="control-label">Staff</label>
                <select name="UserID" class="form-control" asp-items="ViewBag.UserID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Decription" class="control-label"></label>
                <input asp-for="Decription" class="form-control" />
                <span asp-validation-for="Decription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>
