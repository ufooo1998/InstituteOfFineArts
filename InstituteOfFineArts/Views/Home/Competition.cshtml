
<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(images/hero_bg_1.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                <h1 class="text-white font-weight-light text-uppercase font-weight-bold">Competition</h1>
                <p class="breadcrumb-custom"><a href="index.html">Home</a> <span class="mx-2">&gt;</span> <span>Competition</span></p>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div class="container-fluid">
        <hr />
        <h2>ComingUp Competition</h2>
        <table class="table table-hover">
            @foreach (var item in (List<Competition>)ViewData["ComingUp"])
            {
                <tr>
                    <td width="20%">@item.CompetitionName</td>
                    <td width="50%">@item.Decription</td>
                    <td width="20%"></td>
                    <td width="10%"><a asp-action="CompetitionDetails" asp-route-id="@item.ID">Details</a></td>
                </tr>
            }
        </table>

        <hr />
        <h2>During Competition</h2>
        <table class="table table-hover">
            @foreach (var item in (List<Competition>)ViewData["During"])
            {
            <tr>
                <td width="20%">@item.CompetitionName</td>
                <td width="50%">@item.Decription</td>
                <td width="20%">@item.CompetitionPosts.Count() Post(s)</td>
                <td width="10%"><a asp-action="CompetitionDetails" asp-route-id="@item.ID">Details</a></td>
            </tr>
            }
        </table>

        <hr />
        <h2>Examining Competition</h2>
        <table class="table table-hover">
            @foreach (var item in (List<Competition>)ViewData["Examining"])
            {
            <tr>
                <td width="20%">@item.CompetitionName</td>
                <td width="50%">@item.Decription</td>
                <td width="20%">@item.CompetitionPosts.Count() Post(s)</td>
                <td width="10%"><a asp-action="CompetitionDetails" asp-route-id="@item.ID">Details</a></td>
            </tr>
            }
        </table>

        <hr />
        <h2>Ended Competition</h2>
        <table class="table table-hover">
            @foreach (var item in (List<Competition>)ViewData["Ended"])
            {
            <tr>
                <td width="20%">@item.CompetitionName</td>
                <td width="50%">@item.Decription</td>
                <td width="20%">@item.CompetitionPosts.Count() Post(s)</td>
                <td width="10%"><a asp-action="CompetitionDetails" asp-route-id="@item.ID">Details</a></td>
            </tr>
            }
        </table>
    </div>
</div>
