@model List<CompetitionPost>
@{
    ViewData["Title"] = "MyAccount";
}

<style>
    .s-pageheader--home {
        min-height: 255px;
        padding-top: 222px;
    }
</style>
    <div class="pageheader-content row">
        <div class="container">

        </div>
    </div>
</section> <!-- end s-pageheader -->

    <div class="content">
        <div class="container">
            <hr />
            @{ 
                foreach (var item in Model)
                {
                    <div>
                        <div class="full-width">
                            <img class="img-responsive center-block" src="data:image/jpeg;base64,@Convert.ToBase64String(item.Post.Image)" />
                        </div>
                        <div class="full-width">
                            <div class="center-block align-center" style="width:50%;">
                                <hr />
                                <dl class="dl-horizontal">

                                    <dt>Post Name:</dt>
                                    <dd><b>@item.Post.PostName</b></dd>

                                    <dt>Decription:</dt>
                                    <dd>@item.Post.Decription</dd>

                                    <dt>Post Time:</dt>
                                    <dd>@Html.DisplayFor(modelItem => item.Post.CreatedAt)</dd>

                                    <dt>Competition Name:</dt>
                                    <dd>@item.Competition.CompetitionName</dd>
                                </dl>
                            </div>
                        </div>
                        <hr />
                    </div>
                }
            }
        </div>
    </div>