@model InstituteOfFineArts.Models.Post

<style>
    .s-pageheader--home {
        min-height: 255px;
        padding-top: 222px;
    }
</style>
<div class="pageheader-content row">
    <div class="container">
        <div class="row">
        </div>
    </div>
</div>
    </section> <!-- end s-pageheader -->

<div class="content">
    <div class="container">
        <center><h2 class="mb-0 text-primary">Form Submit</h2></center>
        <div class="row ">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form asp-action="Attend" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" name="id" value="@ViewData["id"]" />
                    <div class="form-group">
                        <label asp-for="PostName" class="control-label"></label>
                        <input asp-for="PostName" class="form-control" />
                        <span asp-validation-for="PostName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Decription" class="control-label"></label>
                        <input asp-for="Decription" class="form-control" />
                        <span asp-validation-for="Decription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image" class="control-label"></label>
                        <input asp-for="Image" type="file" class="form-control" required/>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>

