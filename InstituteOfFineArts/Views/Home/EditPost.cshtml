@model InstituteOfFineArts.Models.Post

<style>
    .s-pageheader--home {
        min-height: 255px;
        padding-top: 222px;
    }
</style>
<div class="pageheader-content row">
    <div class="container">
        <div class="row">
        </div>
    </div>
</div>
    </section> <!-- end s-pageheader -->

<div class="content">
    <div class="container">
        <center><h2 class="mb-0 text-primary">Form Submit</h2></center>
        <div class="row ">
            <div class="col-md-6">
                <form asp-action="EditPost" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" name="id" value="@Model.ID" />
                    <div class="form-group">
                        <label asp-for="PostName" class="control-label"></label>
                        <input asp-for="PostName" class="form-control" />
                        <span asp-validation-for="PostName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Decription" class="control-label"></label>
                        <input asp-for="Decription" class="form-control" />
                        <span asp-validation-for="Decription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image" class="control-label"></label>
                        <input asp-for="Image" type="file" id="uploadimg" value="bright-countryside-dawn-302804.jpg" class="form-control" required />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                    </div>
                    <div class="form-group">
                        <a class="btn btn-default btn-block" asp-action="MyAccount">Cancel</a>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
                <div style="margin: 10px auto; width:100%;">
                    <form id="form1" runat="server">
                        <img class="center-block" id="imgpreview" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" alt="Image Preview" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function readURL(input) {

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#imgpreview').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#uploadimg").change(function () {
        readURL(this);
    });
</script>